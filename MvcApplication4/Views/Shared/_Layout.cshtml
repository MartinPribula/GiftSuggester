<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Gift suggester", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @if (Session["LogedUserID"] != null)
                        {
                            @Html.ActionLink(Session["LogedUsername"].ToString(), "Manage", "Home")
                            @Html.ActionLink("Log Out", "LogOff", "Home");                           
                        }else
                        {
                            @Html.ActionLink("Login", "Login", "Home")
                            @Html.ActionLink("Signup", "Register", "Home")
                        }
                    </section>
                    @if (Session["LogedUserID"] != null)
                    {
                        <nav>
                            <ul id="menu">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>           
                                <li>@Html.ActionLink("Get gift", "Suggest", "Home")</li>                       
                                <li>@Html.ActionLink("My suggestions", "MySuggestions", "Home")</li>                   
                                <li>@Html.ActionLink("My recipients", "MyRecipients", "Home")</li>                   
                            </ul>
                        </nav>
                    }
                    else
                    {
                        <nav>
                            <ul id="menu">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Get gift", "Suggest", "Home")</li>                  
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
