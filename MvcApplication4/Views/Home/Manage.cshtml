@model MvcApplication4.Models.ManageModel

@{
    ViewBag.Title = "Manage account";
}

<h2>Manage account</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        @if(ViewBag.Message != null)
        {
            <div style ="border:solid 1px green;margin-bottom:0.5em;margin-top:0.5em;padding-left:0.4em;padding-bottom:0.2em;width:auto;">
                @ViewBag.Message
            </div>
        }
        <legend>nieco</legend>
        <p>You are logged in as: @Session["LogedUsername"].ToString()</p>

        <div class="editor-label">
            @Html.LabelFor(model => model.password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.password)
            @Html.ValidationMessageFor(model => model.password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NewPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NewPassword)
            @Html.ValidationMessageFor(model => model.NewPassword)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConfirmNewPassword)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ConfirmNewPassword)
            @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
        </div>

        <p>
            <input type="submit" value="Modify" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
